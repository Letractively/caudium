VPATH=@srcdir@:@srcdir@/../
prefix=@prefix@
SRCDIR=@srcdir@
INSTALL=@INSTALL@
@SET_MAKE@
CC=@CC@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
CFLAGSUP=$(CFLAGS)

SHELL=/bin/sh

all: 
	(cd libfcgi; $(MAKE) all "CC=$(CC)" "CFLAGSUP=$(CFLAGSUP)" "LDFLAGS=$(LDFLAGS)")
	(cd cgi-fcgi; $(MAKE) all "CC=$(CC)" "CFLAGSUP=$(CFLAGSUP)" "LDFLAGS=$(LDFLAGS)")

reconfig: clean
	uname -rs >config.uname
	./configure

install: all
	$(INSTALL) -s cgi-fcgi/cgi-fcgi $(DESTDIR)/$(prefix)/caudium/server/bin/fcgi

install_alt: all
	$(INSTALL) cgi-fcgi/cgi-fcgi $(DESTDIR)/$(prefix)/lib/caudium/bin/fcgi
	-strip --strip-unneeded $(DESTDIR)/$(prefix)/lib/caudium/bin/fcgi

install_bin:
	@true

distribute: spotless
	Makefile

spotless: 
	rm -f config.cache config.log config.status config.uname

clean:
	(cd libfcgi; $(MAKE) clean "CC=$(CC)" "CFLAGSUP=$(CFLAGSUP)" "LDFLAGS=$(LDFLAGS)")
	(cd cgi-fcgi; $(MAKE) clean "CC=$(CC)" "CFLAGSUP=$(CFLAGSUP)" "LDFLAGS=$(LDFLAGS)")

