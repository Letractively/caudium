# $Id$

VPATH=@srcdir@
prefix=@prefix@
SRCDIR=@srcdir@
INSTALL=@INSTALL@
CC=@CC@
CFLAGS=@CFLAGS@ @CPPFLAGS@
LDFLAGS=@LDFLAGS@ @LIBS@

all: htpasswd 

htpasswd: $(SRCDIR)/htpasswd.c
	-$(CC) $(CFLAGS) -o htpasswd $(SRCDIR)/htpasswd.c $(LDFLAGS)

install: htpasswd
	$(INSTALL) htpasswd $(prefix)/bin/

clean:
	$(RM) htpasswd

spotless: clean
	-$(RM) config.*

distribute: spotless
	-$(RM) Makefile

Makefile: $(SRCDIR)/Makefile.in config.status
	CONFIG_FILES=Makefile CONFIG_HEADERS="" ./config.status
	@echo "Run make again"
	@exit 1
